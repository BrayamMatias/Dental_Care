<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10sp"
    app:cardCornerRadius="10sp"
    android:layout_margin="10sp"
    app:cardBackgroundColor="@color/teal_700">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtViewTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="30sp"
            android:textAlignment="center"
            android:fontFamily="sans-serif-medium"
            android:text="ANALISIS DE DENTADURA"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtViewFecha"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTitulo"
            android:layout_marginStart="10sp"
            android:layout_marginTop="30sp"
            android:layout_toEndOf="@+id/imgViewPre"
            android:fontFamily="sans-serif-medium"
            android:text="Fecha: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtViewMostrarFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewTitulo"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10sp"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="10sp"
            android:layout_toEndOf="@+id/txtViewFecha"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtViewHora"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewFecha"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_toEndOf="@+id/imgViewPre"
            android:fontFamily="sans-serif-medium"
            android:text="Hora: "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txtViewMostrarHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewFecha"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="200sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:layout_toEndOf="@+id/txtViewHora"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/imgViewPre"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_transparent"
            android:layout_marginStart="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="20sp"/>



    </RelativeLayout>





</androidx.cardview.widget.CardView>