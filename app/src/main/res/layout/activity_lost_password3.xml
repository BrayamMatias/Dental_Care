<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LostPassword_3">

    <ImageButton
        android:id="@+id/BtnBack"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        android:backgroundTint="#F9F9F9"
        android:onClick="Back"
        android:src="@mipmap/back" />

    <ImageButton
        android:id="@+id/BtnCancel"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:backgroundTint="#F9F9F9"
        android:onClick="Cancel"
        android:src="@mipmap/cancel" />

    <TextView
        android:id="@+id/TxtTitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="80sp"
        android:layout_marginEnd="20sp"
        android:text="@string/txtTitleLostPassword3"
        android:textAlignment="center"
        android:textColor="#365B6D"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="330dp"
        android:layout_height="40dp"
        android:layout_below="@+id/TxtTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20sp"
        android:background="#00FFFFFF"
        android:text="@string/txtMessageTopLostPassword3"
        android:textAlignment="center"
        android:textColor="#365B6D"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="122dp" />

    <TextView
        android:id="@+id/TxtNewPassword"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMessage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="20sp"
        android:backgroundTint="#FFF"
        android:ems="10"
        android:text="Contraseña nueva"
        android:textColor="#365B6D"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="389dp" />

    <EditText
        android:id="@+id/EdTxtNewPassword"
        android:layout_width="331dp"
        android:layout_height="54dp"
        android:layout_below="@+id/TxtNewPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="20sp"
        android:backgroundTint="#ECECEC"
        android:ems="10"
        android:hint="**************"
        android:inputType="textPassword"
        android:textColor="#4D4C4C"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="456dp" />

    <TextView
        android:id="@+id/TxtConfirmPassword"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EdTxtNewPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="20sp"
        android:backgroundTint="#FFF"
        android:ems="10"
        android:text="Confirmar contraseña"
        android:textColor="#365B6D"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="389dp" />

    <EditText
        android:id="@+id/EdTxtConfirmPassword"
        android:layout_width="331dp"
        android:layout_height="54dp"
        android:layout_below="@+id/TxtConfirmPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="20sp"
        android:backgroundTint="#ECECEC"
        android:ems="10"
        android:hint="**************"
        android:inputType="textPassword"
        android:textColor="#4D4C4C"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="456dp" />

    <Button
        android:id="@+id/BtnIngresar"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_below="@+id/EdTxtConfirmPassword"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30sp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30sp"
        android:layout_marginBottom="203dp"
        android:backgroundTint="#365B6D"
        android:fontFamily="sans-serif-medium"
        android:onClick="NewPassword"
        android:text="Continuar"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:typeface="monospace"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="564dp" />

</RelativeLayout>