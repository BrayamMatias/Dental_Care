<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageButton
                android:layout_width="150px"
                android:layout_height="150px"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:backgroundTint="#F9F9F9"
                android:onClick="Back"
                android:src="@mipmap/back" />

            <TextView
                android:id="@+id/TxtTitle"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20sp"
                android:layout_marginTop="80sp"
                android:layout_marginEnd="20sp"
                android:text="Crea una cuenta nueva"
                android:textAlignment="center"
                android:textColor="#365B6D"
                android:textSize="50sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="109dp"
                tools:layout_editor_absoluteY="26dp" />


            <TextView
                android:id="@+id/txtNombre"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TxtTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="50sp"
                android:layout_marginEnd="20sp"
                android:backgroundTint="#FFF"
                android:ems="10"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:text="Nombre"
                android:textColor="#365B6D"
                android:textSize="14sp"
                android:typeface="normal"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="191dp" />

            <EditText
                android:id="@+id/edTxtNombre"
                android:layout_width="326dp"
                android:layout_height="53dp"
                android:layout_below="@+id/txtNombre"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:backgroundTint="#ECECEC"
                android:ems="10"
                android:hint="Nombre"
                android:inputType="textEmailAddress"
                android:textColor="#4D4C4C"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="245dp" />

            <TextView
                android:id="@+id/txtApPaterno"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edTxtNombre"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:backgroundTint="#FFF"
                android:ems="10"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:text="Apellido paterno"
                android:textColor="#365B6D"
                android:textSize="14sp"
                android:typeface="normal"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="191dp" />

            <EditText
                android:id="@+id/edTxtApPaterno"
                android:layout_width="326dp"
                android:layout_height="53dp"
                android:layout_below="@+id/txtApPaterno"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:backgroundTint="#ECECEC"
                android:ems="10"
                android:hint="Apellido paterno"
                android:inputType="textEmailAddress"
                android:textColor="#4D4C4C"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="245dp" />

            <TextView
                android:id="@+id/txtApMaterno"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edTxtApPaterno"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:backgroundTint="#FFF"
                android:ems="10"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:text="Apellido materno"
                android:textColor="#365B6D"
                android:textSize="14sp"
                android:typeface="normal"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="191dp" />

            <EditText
                android:id="@+id/edTxtApMaterno"
                android:layout_width="326dp"
                android:layout_height="53dp"
                android:layout_below="@+id/txtApMaterno"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:backgroundTint="#ECECEC"
                android:ems="10"
                android:hint="Apellido materno"
                android:inputType="textEmailAddress"
                android:textColor="#4D4C4C"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="245dp" />

            <TextView
                android:id="@+id/txtEmail"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edTxtApMaterno"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:backgroundTint="#FFF"
                android:ems="10"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:text="Correo electrónico"
                android:textColor="#365B6D"
                android:textSize="14sp"
                android:typeface="normal"
                tools:layout_editor_absoluteX="43dp"
                tools:layout_editor_absoluteY="320dp" />

            <EditText
                android:id="@+id/edTxtEmail"
                android:layout_width="326dp"
                android:layout_height="53dp"
                android:layout_below="@+id/txtEmail"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:backgroundTint="#ECECEC"
                android:ems="10"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:textColor="#4D4C4C"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="374dp" />

            <TextView
                android:id="@+id/txtPassword"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edTxtEmail"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:backgroundTint="#FFF"
                android:ems="10"
                android:text="Contraseña"
                android:textColor="#365B6D"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="456dp" />

            <EditText
                android:id="@+id/edTxtPassword"
                android:layout_width="331dp"
                android:layout_height="54dp"
                android:layout_below="@+id/txtPassword"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20sp"
                android:backgroundTint="#ECECEC"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="#4D4C4C"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="523dp" />

            <TextView
                android:id="@+id/txtDate"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edTxtPassword"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20sp"
                android:backgroundTint="#FFF"
                android:ems="10"
                android:text="Fecha de nacimiento"
                android:textColor="#365B6D"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="600dp" />

            <TextView
                android:id="@+id/cvCalendar"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="331dp"
                android:layout_height="54dp"
                android:layout_below="@+id/txtDate"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="40dp"
                android:layout_marginStart="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20sp"
                android:backgroundTint="#FFF"
                android:onClick="abrirCalendario"
                android:clickable="true"
                android:text="Seleccionar"
                android:textColor="#979797" />

            <Button
                android:id="@+id/BtnIngresar"
                android:layout_width="330dp"
                android:layout_height="70dp"
                android:layout_below="@+id/btnLogin"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="30sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="30sp"
                android:backgroundTint="#365B6D"
                android:fontFamily="sans-serif-medium"
                android:onClick="Register"
                android:text="@string/BtnCrearCuenta"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:typeface="monospace"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="564dp" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cvCalendar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30sp"
                android:background="#00FFFFFF"
                android:fontFamily="sans-serif-medium"
                android:onClick="Login"
                android:text="@string/BtnLogin"
                android:textAlignment="center"
                android:textColor="#365B6D"
                tools:layout_editor_absoluteX="45dp"
                tools:layout_editor_absoluteY="122dp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>