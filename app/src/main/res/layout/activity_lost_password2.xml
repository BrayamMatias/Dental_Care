<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LostPassword_2">

    <ImageButton
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:backgroundTint="#F9F9F9"
        android:onClick="Back"
        android:src="@mipmap/back" />

    <ImageButton
        android:id="@+id/BtnCancel"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10sp"
        android:layout_marginRight="10sp"
        android:backgroundTint="#F9F9F9"
        android:onClick="Cancel"
        android:src="@mipmap/cancel" />

    <TextView
        android:id="@+id/TxtTitle"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="80sp"
        android:layout_marginEnd="20sp"
        android:text="@string/txtTitleLostPassword2"
        android:textAlignment="center"
        android:textColor="#365B6D"
        android:textSize="50sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/txtMessage"
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_below="@+id/TxtTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30sp"
        android:background="#00FFFFFF"
        android:text="@string/txtMessageTopLostPassword2"
        android:textAlignment="center"
        android:textColor="#365B6D"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="122dp" />

    <TextView
        android:id="@+id/txtCode"
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMessage"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="50sp"
        android:layout_marginEnd="20sp"
        android:backgroundTint="#FFF"
        android:ems="10"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:text="Código"
        android:textColor="#365B6D"
        android:textSize="14sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="267dp" />

    <EditText
        android:id="@+id/EdTxtCode"
        android:layout_width="326dp"
        android:layout_height="53dp"
        android:layout_below="@+id/txtCode"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="20sp"
        android:backgroundTint="#ECECEC"
        android:ems="10"
        android:hint="Ingresa el código"
        android:inputType="number"
        android:textColor="#4D4C4C"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="320dp" />

    <Button
        android:id="@+id/BtnReenviarCode"
        android:layout_width="330dp"
        android:layout_height="49dp"
        android:layout_below="@+id/EdTxtCode"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20sp"
        android:layout_marginTop="30sp"
        android:layout_marginEnd="20sp"
        android:background="#00FFFFFF"
        android:fontFamily="sans-serif-medium"
        android:text="Reenviar código"
        android:textAlignment="center"
        android:textColor="#365B6D"
        android:textSize="12sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="642dp" />

    <Button
        android:id="@+id/BtnIngresar"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_below="@+id/BtnReenviarCode"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:backgroundTint="#365B6D"
        android:fontFamily="sans-serif-medium"
        android:onClick="SendCode"
        android:text="Continuar"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:typeface="monospace"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="564dp" />

</RelativeLayout>